##########################################################################################

# set the character encoding header (important for xhtml and html5 pages)
AddDefaultCharset utf-8

php_flag display_errors on
php_flag html_errors off

# turn rewrite engine on and set base
RewriteEngine on
#RewriteBase /

# start resolve canonical url issues

